<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
 
<configuration>


  <property>
    <name>demo.dir</name>
    <value>/root/search-demo</value>
    <description>Dir containing Document Crawler demo directory</description>
  </property>


  <property>
    <name>demo.zipfilepath</name>
    <value>/root/search-demo/RFIsForSolr.zip</value>
    <description>Zipfile containing documents to be searched</description>
  </property>

  <property>
    <name>solr.dir</name>
    <value>/opt/solr</value>
    <description>Path to Solr root</description>
  </property>  

  <property>
    <name>stack.log</name>
    <value>/var/log/doc-crawler.log</value>
    <description>Log file for setup/start/stop scripts</description>
  </property> 

  <property>
    <name>stack.dir</name>
    <value>/var/lib/ambari-server/resources/stacks/HDP/2.2/services/doc_crawler_stack</value>
    <description>Stack dir from where to run setup/start/stop scripts</description>
  </property> 
    
</configuration>

